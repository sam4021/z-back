<body>
	
<!--Start Container-->
<div id="main" class="container-fluid">
	<div class="row">

		<!--Start Content-->
		<div id="content" class="col-xs-12 col-sm-12">
<!-- Push notifications  -->
<%
var GTotal=0;
var total=0;
var price=0;
var quantity=0;
for(var sprod of saleProd ){
  if(sale.id == sprod.sale){
    price=sprod.price;
    quantity= sprod.qty;
    total=price *quantity;
    GTotal= GTotal + total;
 } } %>

 <%
 var fAmount=0;
 var amount = 0;
 var balance =0;
 for(var pay of payment ){
   if(sale.id == pay.sale){
     amount=pay.amount;
     fAmount = amount+ fAmount;
   }
 }
balance=GTotal-fAmount; %>
<div class="page-header">
	<div class="page-actions">

	</div>
</div>
<div id="editor"></div>
<div class="page-content">
  <div id="pdf-content" class="container">
        <header>
            <div class="row">
                <div class="col-md-8">
                    <div class="logo">
                        <img src="/assets/img/logo.jpg" alt="logo" class="logo">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="inv">
                        <div class="inv-1">
                            Invoice
                        </div>
                        <div class="inv-2">
                            <div class="num">

                            </div>
                            <div class="date">
                                <%var today = new Date();
                                var dd = today.getDate();
                                var mm = today.getMonth()+1; //January is 0!
                                var yyyy = today.getFullYear();
                                
                                if(dd<10) {
                                    dd = '0'+dd
                                } 
                                
                                if(mm<10) {
                                    mm = '0'+mm
                                } %>
                                
                                <%= dd + '/' + mm + '/' + yyyy %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    <div class="row">
        <div class="col-md-6 info">
            <div class="sec-head">
                Billed From:
            </div>
            <div class="sec-body">
                <p class="title">Zuricart Kenya</p>
              <p>Jamia Plaza, 2nd Floor</p>
              <p>Kimathi Street</p>
              <p>0712944000</p>
              <p>sales@zuricart.co.ke</p>
            </div>
        </div>
        <div class="col-md-6 billed">
          <div class="sec-head">
            Billed To:
          </div>
          <div class="sec-body">
            <% for (var c of client){ if(c.id == sale.client){ %>
            <p class="name"><%= c.first_name %> <%= c.last_name %></p>
            <p><%= c.email %></p>
            <p><%= c.phone %></p>
             <% } } %>
          </div>
        </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <table class="table table-striped table-hover table-sm">
    		<thead class="thead-dark">
        <th>Product</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Subtotal</th>
      </thead>
      <tbody id="prod_sec">
        <% for(var sprod of saleProd ){ %>
          <tr>
            <td class="product">
                <%= sprod.product.title %><br>                
            </td>
            <td>Ksh. <%= sprod.price %></td>
            <td>
              <% var qty=sprod.qty;%>
              <%= qty %></td>
            <td>
              Ksh. <%= qty*sprod.price %>
            </td>
          </tr>
        <% } %>
        <tr><td></td><td></td><td></td><td class="pd-total"><%= GTotal %></td></tr>
      </tbody>
    </table>
    </div>
    <footer>
        <div class="thank-you">
            thank you for shopping at Zuricart Kenya
        </div>
    </footer>
  </div>
