<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
    Product  Categories
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
  <table class="table table-striped table-hover table-sm data-tables">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Sort</th>
	      <th scope="col">Child</th>
				<th scope="col">Keywords</th>
				<th scope="col">Description</th>
				<th scope="col">Visibility</th>
	      <th scope="col" class="actions">Actions</th>
			</tr>
		</thead>
		<tbody>
	    <% for(var c of category){ %>
	    <tr>
					<td><%= c.title %></td>
					<td><%= c.sort %></td>
	        <td>
	          <% for(var c1 of category){
              if(c1.parent==c.id){%>
                <%= c1.title %>,
            <% } } %>
	        </td>
					<td><%= c.seo.keywords %></td>
					<td><%= c.seo.description %></td>
					<td>
						<label class="switch" onclick="makeVisible_cat('<%= c.id %>')">
							<input type="checkbox" <% if(c.visible==1){ %>checked <% } %>>
							<span class="slider round"></span>
						</label>
						<input type="hidden" name="category-status-<%= c.id %>" value="<% if(c.visible==0){ %> 1 <% } else{ %> 0 <% } %>">
					</td>
	        <td class="actions">
							<div class="btn-group" role="group" aria-label="Basic example">
									<a href="/settings/edit-category/<%= c.id %>" class="btn btn-success" onclick="editCateg('')">Edit</a>
									<a href="/settings/edit-category-img/<%= c.id %>" class="btn btn-primary">Edit Image</a>
									<a href="/settings/delete-cat/<%= c.id %>" onclick="return confirm('Are you sure you want to delete this Category?');" class="btn btn-danger">Delete</a>
							</div>
						<!-- <a href="#" class="btn btn-success" onclick="editCateg('<%= c.id %>')">Edit</a> -->
						
	        </td>
	    </tr>
	    <% } %>
		</tbody>
	</table>
</div>
<div class="modal fade" id="editSub" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
				<h4 class="modal-title" id="myModalLabel">Edit Category</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div id="editCat" class="modal-body">

      </div>
    </div>
  </div>
</div>
<% include ../../partials/footer %>
