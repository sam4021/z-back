<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
    Add Main Category Foot 
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
  <form action="/settings/add-main-category-foot" method="post" autocomplete="off">
    <div class="row">
     <div class="col-md-6">
       <div class="form-group">
         <label class="control-label col-md-12 col-sm-12 col-xs-12">Category Title</label>
         <div class="col-md-12 col-sm-12 col-xs-12">
            <input type="text" name="title" class="form-control">
         </div>
       </div>
       <div class="form-group">
        <label class="control-label col-md-12 col-sm-12 col-xs-12">Sort</label>
        <div class="col-md-12 col-sm-12 col-xs-12">
           <input type="number" name="sort" class="form-control">
        </div>
      </div>
       <div class="form-actions">
         <button type="submit" class="btn btn-primary">Submit</button>
       </div>
     </div>
     <div class="col-md-6">
       <h3>Products Selected</h3>
 			<table class="table table-striped table-hover table-sm">
 				<thead class="thead-dark">
         <th>Product</th>
         <th>Price</th>
         <th>Action</th>
       </thead>
       <tbody id="Prod-Cat">

       </tbody>
     </table>
     </div>
     <div class="col-md-12">
       <table class="table table-striped table-hover table-sm data-tables">
   			<thead class="thead-dark">
             <tr>
               <td></td>
               <th>Title</th>
               <th>Cost</th>
               <th>Price</th>
               <th>Special Price</th>
             </tr>
           </thead>
           <tbody>
             <% for(var product of products){
                  %>
             <tr id="tr_<%= product.id %>">
                 <td>
                   <div class="form-group checkbox-warning-filled">
                       <input type="checkbox" name="prod[]" value="<%= product.id %>" id="ch_<%= product.id %>" class="filled-in" onclick="addProdC('<%= product.id %>')">
                       <label for="<%= product.id %>"></label>
                       <input type="hidden" value="<%= product.title %>" id="product_<%= product.id %>">
                       <input type="hidden" value="<%= product.price %>" id="price_<%= product.id %>">
                   </div>
                 </td>
                 <td><%= product.title %></td>
                 <td><%= product.cost %></td>
                 <td><%= product.price %></td>
                 <td><%= product.special_price %></td>
             </tr>
             <% } %>
           </tbody>
         </table>
     </div>
    </div>
 </form>
</div>
<% include ../../partials/footer %>
